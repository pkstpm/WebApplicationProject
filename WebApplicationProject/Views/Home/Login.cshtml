@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true"/>
    <link href="~/font-awesome/css/all.css" rel="stylesheet"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Almarai:wght@300;400;700;800&display=swap" rel="stylesheet">
  </head>
  <body>
    <main>
        <div class="box">
        <div class="almarai-bold back-page">
            <i class="fa-solid fa-chevron-left fa-2xl"></i>
            <p>BACK</p>
        </div>
            <div class="login-container">
                <div class="text-container">
                    <header class="almarai-bold">
                        <h1>Welcome Back</h1>
                        <h2>Enter your email and password to access your account</h2>
                        <div class="content">
                            <div id="box-content1">
                                <label for="email">Email</label><br />
                                <input type="text" placeholder="username" class="text-box" name="email" required/><br />
                            <div>
                            <div id="box-content2">
                                <label for="password">Password</label><br />
                                <i class="fa-solid fa-eye" id="eye-icon" onmouseover="showPassword()" onmouseout="hidePassword()"></i>
                                <input type="password" placeholder="password" class="text-box" id="input-password" name="password" required/><br />
                            </div>
                            <input type="button" id="btn-signin" name="signin" value="Sign In"/>
                        </div>
                    </header>
                </div>
                <div class="inside-box">

                </div>
            </div>
        </div>
    </main>
	<script src="/js/site.js"></script>
  </body>
</html>
